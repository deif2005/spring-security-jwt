<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="false" scanPeriod="30 seconds">
    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <property name="LOG_HOME" value="/home/logs/machine_activate_web/" />
    <!--/home/logs/machine_activate_web/-->

    <!-- info级别-->
    <appender name="INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <!--<Encoding>UTF-8</Encoding>-->
        <File>${LOG_HOME}info/info.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_HOME}info/info.%d{yyyy-MM-dd}.%i.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>2MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{MM-dd HH:mm:ss.SSS} %t %logger%n%level：%msg%n</Pattern>
        </encoder>
    </appender>

    <!-- debug级别 -->
    <appender name="DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <!--<Encoding>UTF-8</Encoding>-->
        <File>${LOG_HOME}debug/debug.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_HOME}debug/debug.%d{yyyy-MM-dd-HH}.%i.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>2MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{MM-dd HH:mm:ss.SSS} %t %logger%n%level：%msg%n</Pattern>
        </encoder>
    </appender>

    <!-- error级别-->
    <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <!--<Encoding>UTF-8</Encoding>-->
        <File>${LOG_HOME}error/error.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_HOME}error/error.%d{yyyy-MM-dd-HH}.%i.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>2MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{MM-dd HH:mm:ss.SSS} %t %logger%n%level：%msg%n</Pattern>
        </encoder>
    </appender>

    <!-- 数据库日志 -->
    <appender name="JDBC" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<Encoding>UTF-8</Encoding>-->
        <File>${LOG_HOME}jdbc/jdbc.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_HOME}jdbc/jdbc.%d{yyyy-MM-dd}.%i.log
            </FileNamePattern>
            <MaxHistory>720</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>2MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{MM-dd HH:mm:ss.SSS} %t %logger%n%level：%msg%n</Pattern>
        </encoder>
    </appender>

    <!-- 控制台日志 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{yyyyMMdd-HH:mm:ss.SSSZ}|%contextName|%thread|%-5level|%logger|%msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="com.wd.question.dao" level="debug" additivity="true">
        <appender-ref ref="JDBC" />
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.quartz" level="ERROR" />

    <!-- 当前日志总级别为debug -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="INFO" />
        <appender-ref ref="DEBUG" />
        <appender-ref ref="ERROR" />
    </root>

    <!-- 其他第三方日志 -->
    <logger name="org.logicalcobwebs.proxool" level="off" />
    <logger name="org.springframework" level="off" />
    <logger name="org.mybatis.spring" level="off" />
    <logger name="org.apache" level="off" />
    <logger name="com.zaxxer.hikari" level="off" />

</configuration>
